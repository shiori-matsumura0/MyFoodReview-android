<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_food_beige_pattern"
    android:fillViewport="true"
    tools:context=".UpdateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_food_beige_pattern">

        <!-- ===== Photo（固定枠 + 右下ボタン）===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/photoContainer"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@color/card_white"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivUpdateMainPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage" />

                <ImageButton
                    android:id="@+id/btUpdatePhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_fab_warm_ripple"
                    android:elevation="8dp"
                    android:padding="12dp"
                    android:translationZ="16dp"
                    app:srcCompat="@drawable/ic_baseline_add_24"
                    app:tint="@color/brown_dark" />
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ===== 横並びサブPhoto ===== -->
        <LinearLayout
            android:id="@+id/subPhotoContainer"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/photoContainer">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivUpdateSubPhoto1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivUpdateSubPhoto2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivUpdateSubPhoto3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivUpdateSubPhoto4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <!-- ===== Form Card（ここに全部入れる）===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_white"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPhotoContainer">

            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ===== 1段目：訪問日 + 行ってみたい ===== -->
                <LinearLayout
                    android:id="@+id/rowVisitedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- 左：訪問日 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvVisitedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_Update_visited_date"
                            android:textColor="@color/brown_light"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/edVisitedDate"
                            android:layout_width="175dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@color/brown_dark"
                            android:clickable="true"
                            android:focusable="true"
                            android:inputType="date"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@drawable/cursor_brown" />
                    </LinearLayout>

                    <!-- 右：行ってみたい（☆） -->
                    <LinearLayout
                        android:id="@+id/rowWantToGo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWantToGo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_Update_want_to_go"
                            android:textColor="@color/brown_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivUpdateWantToGo"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            app:srcCompat="@drawable/ic_baseline_grade_24" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 店名 -->
                <TextView
                    android:id="@+id/tvUpdateShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_Update_shop_name"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etUpdateShopName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/brown_dark"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_brown" />

                <!-- 都道府県 / エリア（2列） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUpdatePrefecture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_Update_prefecture"
                            android:textColor="@color/brown_light"
                            android:textSize="12sp" />

                        <Spinner
                            android:id="@+id/spUpdatePrefecture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:entries="@array/prefecture_list"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUpdateArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_Update_area"
                            android:textColor="@color/brown_light"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/etUpdateArea"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:backgroundTint="@color/brown_dark"
                            android:inputType="textPersonName"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@drawable/cursor_brown" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ジャンル -->
                <TextView
                    android:id="@+id/tvUpdateGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_Update_genre"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spUpdateGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:entries="@array/genre_list" />

                <!-- URL -->
                <TextView
                    android:id="@+id/tvUpdateUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_Update_url"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etUpdateUrl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/brown_dark"
                    android:inputType="textUri"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_brown" />

                <!-- 評価 -->
                <TextView
                    android:id="@+id/tvUpdateRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_Update_rating"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <!-- ★ここから変更★ -->
                <!--<Spinner
                    android:id="@+id/spUpdateRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:entries="@array/rating_list" />-->

                <!-- 評価をSpinner→imageviewに変更 ImageViewのサイズ24dp→20dpに仮変更-->
                <LinearLayout
                    android:id="@+id/llUpdateRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tvAddRating">

                    <ImageView
                        android:id="@+id/ivUpdateStar1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />  <!-- 白い星 -->

                    <ImageView
                        android:id="@+id/ivUpdateStar2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />

                    <ImageView
                        android:id="@+id/ivUpdateStar3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />

                    <ImageView
                        android:id="@+id/ivUpdateStar4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />

                    <ImageView
                        android:id="@+id/ivUpdateStar5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />
                </LinearLayout>
                <!-- ★ここまで★ -->

                <!-- メモ -->
                <TextView
                    android:id="@+id/tvUpdateMemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_Update_memo"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/memoScroll"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="6dp"
                    android:fillViewport="true"
                    android:overScrollMode="ifContentScrolls">

                    <EditText
                        android:id="@+id/etUpdateMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_box"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:minLines="5"
                        android:padding="12dp"
                        android:scrollbars="vertical"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@drawable/cursor_brown" />
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>