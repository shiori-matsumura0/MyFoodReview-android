<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_food_beige_pattern"
    android:fillViewport="true"
    tools:context=".AddActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_food_beige_pattern"
        tools:context=".AddActivity">


        <!-- ===== Photo（3:4っぽく見える固定枠 + 右下ボタン）===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/photoContainer"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@color/card_white"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivAddMainPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage" />

                <ImageButton
                    android:id="@+id/btAddPhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_fab_warm_ripple"
                    android:elevation="8dp"
                    android:padding="12dp"
                    android:translationZ="16dp"
                    app:srcCompat="@drawable/ic_baseline_add_24"
                    app:tint="@color/brown_dark" />
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- ===== 横並びサブPhoto ===== -->
        <LinearLayout
            android:id="@+id/subPhotoContainer"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/photoContainer">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivAddSubPhoto1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivAddSubPhoto2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivAddSubPhoto3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_white">

                <ImageView
                    android:id="@+id/ivAddSubPhoto4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/noimage"/>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>





        <!-- ===== Form Card（ここに全部入れる）===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_white"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPhotoContainer">

            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/rowVisitedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- 左：訪問日 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvVisitedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_add_visited_date"
                            android:textColor="@color/brown_light"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/edVisitedDate"
                            android:layout_width="175dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@color/brown_dark"
                            android:clickable="true"
                            android:focusable="true"
                            android:inputType="date"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@drawable/cursor_brown" />
                    </LinearLayout>

                    <!-- 右側（行ってみたい → ☆） -->
                    <LinearLayout
                        android:id="@+id/rowWantToGo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWantToGo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_add_want_to_go"
                            android:textColor="@color/brown_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivAddWantToGo"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            app:srcCompat="@drawable/ic_baseline_grade_24" />

                    </LinearLayout>
                </LinearLayout>

                <!-- 店名 -->
                <TextView
                    android:id="@+id/tvAddShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_add_shop_name"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etAddShopName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/brown_dark"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_brown" />

                <!-- 都道府県 / エリア（2列） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAddPrefecture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_add_prefecture"
                            android:textColor="@color/brown_light"
                            android:textSize="12sp" />

                        <Spinner
                            android:id="@+id/spAddPrefecture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:entries="@array/prefecture_list"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAddArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_add_area"
                            android:textColor="@color/brown_light"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/etAddArea"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:backgroundTint="@color/brown_dark"
                            android:inputType="textPersonName"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@drawable/cursor_brown" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ジャンル -->
                <TextView
                    android:id="@+id/tvAddGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_add_genre"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spAddGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:entries="@array/genre_list" />

                <!-- URL -->
                <TextView
                    android:id="@+id/tvAddUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_add_url"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etAddUrl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/brown_dark"
                    android:inputType="textUri"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_brown" />

                <!-- 評価 -->
                <TextView
                    android:id="@+id/tvAddRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_add_rating"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <!-- 評価をSpinner→imageviewに変更 ImageViewのサイズ24dp→20dpに仮変更-->
                <LinearLayout
                    android:id="@+id/llAddRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tvAddRating">

                    <ImageView
                        android:id="@+id/ivAddStar1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />  <!-- 白い星 -->

                    <ImageView
                        android:id="@+id/ivAddStar2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />

                    <ImageView
                        android:id="@+id/ivAddStar3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />

                    <ImageView
                        android:id="@+id/ivAddStar4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />

                    <ImageView
                        android:id="@+id/ivAddStar5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        app:tint="@color/accent_warm" />
                </LinearLayout>


                <!-- メモ -->
                <TextView
                    android:id="@+id/tvAddMemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_add_memo"
                    android:textColor="@color/brown_light"
                    android:textSize="12sp" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/memoScroll"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="6dp"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:overScrollMode="ifContentScrolls"
                    android:paddingBottom="2dp">

                    <EditText
                        android:id="@+id/etAddMemo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/bg_input_box_inset"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:minLines="5"
                        android:padding="12dp"
                        android:scrollbars="vertical"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@drawable/cursor_brown" />
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>