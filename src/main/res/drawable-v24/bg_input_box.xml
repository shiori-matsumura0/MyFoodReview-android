<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景色 -->
    <solid android:color="@color/card_white" />

    <!-- 枠線（アンダーバーと同色・細め） -->
    <stroke
        android:width="1dp"
        android:color="@color/brown_dark" />

    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />

    <!-- 角（少しだけ） -->
    <corners android:radius="4dp" />

</shape>
